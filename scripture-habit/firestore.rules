rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read groups they are members of
    // Allow creation if authenticated
    match /groups/{groupId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      // Updates are now handled via backend, but we might keep this restricted or open for specific fields
      allow update: if request.auth != null && (resource.data.members.hasAny([request.auth.uid]) || request.resource.data.members.hasAny([request.auth.uid]));
      
      // Allow access to messages subcollection if user is a member of the group
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
        // Ideally: allow read, write: if request.auth != null && get(/databases/$(database)/documents/groups/$(groupId)).data.members.hasAny([request.auth.uid]);
      }
    }
  }
}